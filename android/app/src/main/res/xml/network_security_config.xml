<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production domain için HTTPS -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">proje.cloud</domain>
        <trust-anchors>
            <!-- Sistem sertifikaları -->
            <certificates src="system" />
            <!-- Kullanıcı sertifikaları (development için) -->
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- Development için HTTP'ye izin ver -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>

